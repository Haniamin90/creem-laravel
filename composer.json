{
    "name": "creem/laravel",
    "description": "Official Laravel package for CREEM - Accept payments globally with automatic tax handling",
    "keywords": ["laravel", "creem", "payments", "subscriptions", "merchant-of-record", "billing"],
    "license": "MIT",
    "authors": [
        {
            "name": "CREEM",
            "email": "support@creem.io"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/contracts": "^10.0|^11.0|^12.0",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "illuminate/http": "^10.0|^11.0|^12.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "mockery/mockery": "^1.6",
        "orchestra/testbench": "^8.0|^9.0|^10.0",
        "phpunit/phpunit": "^10.0|^11.0"
    },
    "autoload": {
        "psr-4": {
            "Creem\\Laravel\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Creem\\Laravel\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Creem\\Laravel\\CreemServiceProvider"
            ],
            "aliases": {
                "Creem": "Creem\\Laravel\\Facades\\Creem"
            }
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --no-coverage",
        "test:coverage": "vendor/bin/phpunit",
        "lint": "vendor/bin/pint",
        "lint:check": "vendor/bin/pint --test"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
